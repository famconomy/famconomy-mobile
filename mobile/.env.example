# Environment Variables Template
# Copy this to .env and fill in your actual values
# .env is git-ignored, so credentials won't be committed

# ============================================
# Google OAuth
# ============================================
# Get from: Firebase Console → iOS app → GoogleService-Info.plist
# Or from: Google Cloud Console → OAuth Credentials
REACT_APP_GOOGLE_IOS_CLIENT_ID=328667852218-ofk3l0s1vu2n8k6sgdggl3dvcvlvk02e.apps.googleusercontent.com
REACT_APP_GOOGLE_WEB_CLIENT_ID=328667852218-ofk3l0s1vu2n8k6sgdggl3dvcvlvk02e.apps.googleusercontent.com

# ============================================
# Apple Sign-In
# ============================================
# Get from: Apple Developer Portal → Team ID
REACT_APP_APPLE_CLIENT_ID=com.famconomy.mobile
REACT_APP_APPLE_TEAM_ID=XXXXXXXXXX
REACT_APP_APPLE_REDIRECT_URL=com.famconomy.mobile://apple-auth

# ============================================
# Microsoft OAuth
# ============================================
# Get from: Azure Portal → App Registrations → Application (client) ID
REACT_APP_MICROSOFT_CLIENT_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
REACT_APP_MICROSOFT_REDIRECT_URL=msauth.com.famconomy.mobile://auth/redirect

# ============================================
# Facebook OAuth
# ============================================
# Get from: Facebook Developer Console → App ID
REACT_APP_FACEBOOK_APP_ID=0000000000000000
REACT_APP_FACEBOOK_REDIRECT_URL=https://www.facebook.com/connect/login_success.html

# ============================================
# Backend API
# ============================================
REACT_APP_API_BASE_URL=https://famconomy.com/api

# ============================================
# Development/Debugging
# ============================================
# Enable verbose logging
DEBUG=true

# Use localhost for development
# REACT_APP_API_BASE_URL=http://localhost:3000/api
