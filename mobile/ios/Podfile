# Resolve react_native_pods.rb with node to allow for hoisting
require Pod::Executable.execute_command('node', ['-p',
  'require.resolve(
    "react-native/scripts/react_native_pods.rb",
    {paths: [process.argv[1]]},
  )', __dir__]).strip

require 'pathname'

platform :ios, min_ios_version_supported
prepare_react_native_project!

linkage = ENV['USE_FRAMEWORKS']
if linkage != nil
  Pod::UI.puts "Configuring Pod with #{linkage}ally linked Frameworks".green
  use_frameworks! :linkage => linkage.to_sym
end

target 'Mobile' do
  config = use_native_modules!

  pod 'GoogleUtilities', :modular_headers => true
  pod 'FirebaseCore', :modular_headers => true
  pod 'FirebaseAuth', :modular_headers => true
  pod 'FirebaseCoreInternal', :modular_headers => true
  pod 'FirebaseAppCheckInterop', :modular_headers => true
  pod 'GTMAppAuth', :modular_headers => true
  pod 'GTMSessionFetcher/Core', :modular_headers => true
  pod 'GoogleSignIn', :modular_headers => true
  pod 'PromisesObjC', :modular_headers => true

  use_react_native!(
    :path => config[:reactNativePath],
    # An absolute path to your application root.
  :app_path => "#{Pod::Config.instance.installation_root}/..",
  # Temporary: disable New Architecture (Fabric) to avoid unsupported event errors from third-party libs
  :new_arch_enabled => false
  )

  post_install do |installer|
    # https://github.com/facebook/react-native/blob/main/packages/react-native/scripts/react_native_pods.rb#L197-L202
    react_native_post_install(
      installer,
      config[:reactNativePath],
      :mac_catalyst_enabled => false,
      # :ccache_enabled => true
    )

    # React Native 0.79 ships overlapping modulemaps for ReactCommon and the
    # new runtime pods. Xcode 16 treats the duplicates as conflicting modules,
    # so we strip the redundant files after pod install until upstream fixes
    # the overlap.
    duplicate_modulemaps = [
      # ReactCommon vs React-RuntimeApple
      'Target Support Files/React-RuntimeApple/React-RuntimeApple.modulemap',
      'Headers/Public/ReactCommon/React-RuntimeApple.modulemap',
      # React runtime duplication coming from jsitooling
      'Target Support Files/React-jsitooling/React-jsitooling.modulemap'
    ]
    pods_root = File.join(Pod::Config.instance.installation_root, 'Pods')
    duplicate_modulemaps.each do |relative_path|
      absolute_path = File.join(pods_root, relative_path)
      next unless File.exist?(absolute_path)

      Pod::UI.warn "Removing duplicate React Native modulemap at #{relative_path}"
      File.delete(absolute_path)
    end

    # Safety net: remove any lingering duplicate modulemaps that may have been
    # regenerated later in the install cycle.
    %w[React-RuntimeApple.modulemap].each do |filename|
      Dir.glob(File.join(pods_root, '**', filename)).each do |path|
        next unless File.exist?(path)

        Pod::UI.warn "Removing duplicate React Native modulemap at #{Pathname(path).relative_path_from(Pathname(pods_root))}"
        File.delete(path)
      end
    end

    jsitooling_modulemap = File.join(pods_root, 'Target Support Files/React-jsitooling/React-jsitooling.modulemap')
    sanitized_jsi_modulemap = <<~MODULEMAP
      module react_runtime_jsitooling {
        umbrella header "React-jsitooling-umbrella.h"

        export *
        module * { export * }
      }
    MODULEMAP

    Pod::UI.warn 'Rewriting React-jsitooling.modulemap to avoid duplicate module definition'
    File.write(jsitooling_modulemap, sanitized_jsi_modulemap)

    core_modulemap = File.join(pods_root, 'Headers/Public/react_runtime/React-RuntimeCore.modulemap')
    if File.exist?(core_modulemap)
      contents = File.read(core_modulemap)
      updated_contents = contents.gsub(
        'exclude header "React-jsitooling-umbrella.h"',
        'header "React-jsitooling-umbrella.h"'
      )

      if contents != updated_contents
        Pod::UI.warn 'Patching React-RuntimeCore.modulemap to include jsitooling umbrella header'
        File.write(core_modulemap, updated_contents)
      end
    end
  end
end
