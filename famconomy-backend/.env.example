# Application URLs
APP_BASE_URL="http://localhost:5173"
API_BASE_URL="http://localhost:3000"
# POST_AUTH_REDIRECT_URL="http://localhost:5173/app" # Optional explicit redirect target after OAuth
# POST_AUTH_REDIRECT_PATH="app"                      # Optional path appended to APP_BASE_URL when POST_AUTH_REDIRECT_URL not set

# Background Jobs
ENABLE_LINZ_CONSOLIDATION_JOB="false" # Set to "true" to run the hourly LinZ memory consolidation job

# Database Configuration
DATABASE_URL="mysql://username:password@localhost:3306/famconomy"

# Authentication & Security (REQUIRED)
JWT_SECRET="your-super-secure-jwt-secret-key-here"
SESSION_SECRET="your-super-secure-session-secret-key-here"

# OAuth Configuration
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

FACEBOOK_APP_ID="your-facebook-app-id"
FACEBOOK_APP_SECRET="your-facebook-app-secret"
# FACEBOOK_CLIENT_ID / FACEBOOK_CLIENT_SECRET are also accepted for compatibility

APPLE_CLIENT_ID="your-apple-client-id"
APPLE_TEAM_ID="your-apple-team-id"
APPLE_KEY_ID="your-apple-key-id"
APPLE_PRIVATE_KEY_LOCATION="/absolute/path/to/AuthKey.p8"
# APPLE_PRIVATE_KEY_PATH="/absolute/path/to/AuthKey.p8" # Optional legacy name supported

MICROSOFT_CLIENT_ID="your-microsoft-client-id"
MICROSOFT_CLIENT_SECRET="your-microsoft-client-secret"

# Optional: Override generated callback URLs if your deployment uses custom routing
# GOOGLE_CALLBACK_URL="https://example.com/api/auth/google/callback"
# FACEBOOK_CALLBACK_URL="https://example.com/api/auth/facebook/callback"
# APPLE_CALLBACK_URL="https://example.com/api/auth/apple/callback"
# MICROSOFT_CALLBACK_URL="https://example.com/api/auth/microsoft/callback"

# Plaid Configuration (for financial data)
PLAID_CLIENT_ID="your-plaid-client-id"
PLAID_SECRET="your-plaid-secret-key"
PLAID_ENV="sandbox" # sandbox, development, or production

# OpenAI Configuration (for LinZ AI assistant)
OPENAI_API_KEY="your-openai-api-key"

# Logging Configuration
DEBUG_LOGGING="false" # Set to "true" to enable debug logs in production
DEBUG_AUTH="false" # Set to "true" to enable auth debugging

# Email Configuration (optional)
SMTP_HOST="your-smtp-host"
SMTP_PORT="587"
SMTP_USER="your-smtp-user"
SMTP_PASS="your-smtp-password"

# Environment
NODE_ENV="development" # development, staging, production
